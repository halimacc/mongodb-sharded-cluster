{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "uniqueNamePrefix": {
      "type": "string",
      "defaultValue": "",
      "minLength": 2
    },
    "adminUserName": {
      "type": "string",
      "defaultValue": ""
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": ""
    },
    "replicaCount": {
      "type": "int",
      "defaultValue": 2,
      "minValue": 2,
      "maxValue": 2
    }
  },
  "variables": {
    "commonSettings": {
      "scriptUrl": "https://raw.githubusercontent.com/halimacc/mongodb-sharded-cluster/master/",
      "templateBaseUrl": "[variables('commonSettings').scriptUrl]",
      "sharedTemplateUrl": "[concat(variables('commonSettings').templateBaseUrl, 'shared-resources.json')]",
      "replicaTemplateUrl": "[concat(variables('commonSettings').templateBaseUrl, 'replica-resources.json')]",

      "uniqueNamePrefix": "[parameters('uniqueNamePrefix')]",
      "location": "[resourceGroup().location]",
      "adminUsername": "[parameters('adminUsername')]",
      "adminPassword": "[parameters('adminPassword')]"
    },

    "networkSettings": {
      "virtualNetworkName": "[concat(variables('commonSettings').uniqueNamePrefix, '-vnet')]",
      "virtualNetworkId": "[resourceId('Microsoft.Network/virtualNetworks', variables('networkSettings').vnetName)]",
      "addressPrefix": "10.0.0.0/16",
      "subnetName": "msc-subnet",
      "subnetId": "[concat(variables('virtualNetworkId'), '/subnets/', variables('networkSettings').subnetName])",
      "subnetAddressPrefix": "10.0.0.0/24"
    },

    "storageSettings": {
      "storageAccountName": "[concat(variables('commonSettings').uniqueNamePrefix, '-sto')]",
      "storageAccountType": "Standard_LRS",
      "storageContainerName": "msc-disks"
    },

    "clusterSettings": {
      "replicaCount": "[parameters('replicaCount')]"
    }
  },
  "resources": [
    {
      "name": "shared-resources",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('commonSettings').sharedTemplateUrl]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "commonSettings": {
            "value": "[variables('commonSettings')]"
          },
          "storageSettings": {
            "value": "[variables('storageSettings')]"
          },
          "networkSettings": {
            "value": "[variables('networkSettings')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat('member-resources', copyindex())]",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'shared-resources')]"
      ],
      "copy": {
        "name": "replicaLoop",
        "count": "[variables('clusterSettings').replicaCount]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('commonSettings').replicaTemplateUrl]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "commonSettings": { "value": "[variables('commonSettings')]" },
          "networkSettings": { "value": "[variables('networkSettings')]" },
          "storageSettings": { "value": "[variables('storageSettings')]" },
          "replicaSettings": {
            "value": {
              "replicaIndex": "[copyIndex()]",
              "replicaIpPrefix": "10.0.0.",
              "replicaIpOffset": "[mul(10, add(copyIndex(), 1))]"
            }
          }
        }
      }
    }
  ]
}
