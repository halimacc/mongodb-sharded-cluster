{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "uniqueNamePrefix": {
      "type": "string",
      "defaultValue": "",
      "minLength": 2
    },
    "adminUserName": {
      "type": "string",
      "defaultValue": ""
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": ""
    },
    "replicaCount": {
      "type": "int",
      "defaultValue": 2,
      "minValue": 2,
      "maxValue": 2
    }
  },
  "variables": {
    "scriptUrl": "https://raw.githubusercontent.com/halimacc/mongodb-sharded-cluster/master/",
    "templateBaseUrl": "[variables('scriptUrl')]",
    "sharedTemplateUrl": "[concat(variables('templateBaseUrl'), 'shared-resources.json')]",
    "replicaTemplateUrl": "[concat(variables('templateBaseUrl'), 'replica-resources.json')]",
    "configsvrTemplateUrl": "[concat(variables('templateBaseUrl'), 'configsvr-resources.json')]",
    "routerTemplateUrl": "[concat(variables('templateBaseUrl'), 'router-resources.json')]",
    

    "commonSettings": {
      "uniqueNamePrefix": "[parameters('uniqueNamePrefix')]",
      "location": "[resourceGroup().location]",
      "adminUsername": "[parameters('adminUsername')]",
      "adminPassword": "[parameters('adminPassword')]",
      "mongoScriptUris": [
        "[concat(variables('templateBaseUrl'), 'install-mongo.sh')]"
      ]
    },
    "networkSettings": {
      "vnetName": "[concat(variables('commonSettings').uniqueNamePrefix, '-vnet')]",
      "vnetAddrPrefix": "10.0.0.0/16",
      "subnetName": "msc-subnet",
      "subnetAddrPrefix": "10.0.0.0/24"
    },
    "storageSettings": {
      "storageAccountName": "[concat(variables('commonSettings').uniqueNamePrefix, 'sto')]",
      "storageAccountType": "Standard_LRS",
      "storageContainerName": "msc-disks"
    },
    "clusterSettings": {
      "replicaCount": "[parameters('replicaCount')]"
    }
  },
  "resources": [
    {
      "name": "shared-resources",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('sharedTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "commonSettings": { "value": "[variables('commonSettings')]" },
          "networkSettings": { "value": "[variables('networkSettings')]" },
          "storageSettings": { "value": "[variables('storageSettings')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "configsvr-resources",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'shared-resources')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('configsvrTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "commonSettings": { "value": "[variables('commonSettings')]" },
          "networkSettings": { "value": "[variables('networkSettings')]" },
          "storageSettings": { "value": "[variables('storageSettings')]" },
          "configsvrSettings": {
            "value": {
              "configsvrIpPrefix": "10.0.0.",
              "configsvrIpOffset": 8
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat('replica-resources', copyindex())]",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'shared-resources')]"
      ],
      "copy": {
        "name": "replicaLoop",
        "count": "[variables('clusterSettings').replicaCount]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('replicaTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "commonSettings": { "value": "[variables('commonSettings')]" },
          "networkSettings": { "value": "[variables('networkSettings')]" },
          "storageSettings": { "value": "[variables('storageSettings')]" },
          "replicaSettings": {
            "value": {
              "replicaIndex": "[copyIndex()]",
              "replicaIpPrefix": "10.0.0.",
              "replicaIpOffset": "[mul(16, add(copyIndex(), 1))]"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "router-resources",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'shared-resources')]",
        "replicaLoop"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('routerTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "commonSettings": { "value": "[variables('commonSettings')]" },
          "networkSettings": { "value": "[variables('networkSettings')]" },
          "storageSettings": { "value": "[variables('storageSettings')]" },
          "routerSettings": {
            "value": {
              "routerIpPrefix": "10.0.0.",
              "routerIpOffset": 5
            }
          }
        }
      }
    }
  ]
}
