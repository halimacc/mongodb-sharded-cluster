{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "uniqueNamePrefix": {
      "type": "string",
      "defaultValue": "",
      "minLength": 3,
      "maxLength": 7,
      "metadata": { "description": "unique name prefix for Azure resources in cluster, 3-7 characters." }
    },
    "adminUserName": {
      "type": "string",
      "defaultValue": "",
      "metadata": { "description": "username of administrator for all Ubuntu virtual machines." }
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": { "description": "password of administrator for all Ubuntu virtual machines." }
    },
    "shardCount": {
      "type": "int",
      "defaultValue": 2,
      "minValue": 2,
      "maxValue": 2,
      "metadata": { "description": "count of shard component in cluster, fixed to 2 for now." }
    }
  },
  "variables": {
    "scriptUrl": "https://raw.githubusercontent.com/halimacc/mongodb-sharded-cluster/master/",
    "templateBaseUrl": "[variables('scriptUrl')]",
    "sharedTemplateUrl": "[concat(variables('templateBaseUrl'), 'shared-resources.json')]",
    "replicaTemplateUrl": "[concat(variables('templateBaseUrl'), 'replica-resources.json')]",
    "routerTemplateUrl": "[concat(variables('templateBaseUrl'), 'router-resources.json')]",

    "commonSettings": {
      "uniqueNamePrefix": "[parameters('uniqueNamePrefix')]",
      "location": "[resourceGroup().location]",
      "adminUsername": "[parameters('adminUsername')]",
      "adminPassword": "[parameters('adminPassword')]",
      "mongoScriptUris": [
        "[concat(variables('templateBaseUrl'), 'configure-replica-vm.sh')]",
        "[concat(variables('templateBaseUrl'), 'configure-router-vm.sh')]"
      ]
    },
    "networkSettings": {
      "vnetName": "[concat(variables('commonSettings').uniqueNamePrefix, '-vnet')]",
      "vnetAddrPrefix": "10.0.0.0/16",
      "subnetName": "msc-subnet",
      "subnetAddrPrefix": "10.0.0.0/24"
    },
    "storageSettings": {
      "storageAccountName": "[concat(variables('commonSettings').uniqueNamePrefix, 'sto')]",
      "storageAccountType": "Standard_LRS",
      "storageContainerName": "msc-disks"
    },
    "clusterSettings": {
      "shardCount": "[parameters('shardCount')]"
    }
  },
  "resources": [
    {
      "name": "shared-resources",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('sharedTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "commonSettings": { "value": "[variables('commonSettings')]" },
          "networkSettings": { "value": "[variables('networkSettings')]" },
          "storageSettings": { "value": "[variables('storageSettings')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "configsvr-resources",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'shared-resources')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('replicaTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "commonSettings": { "value": "[variables('commonSettings')]" },
          "networkSettings": { "value": "[variables('networkSettings')]" },
          "storageSettings": { "value": "[variables('storageSettings')]" },
          "replicaSettings": {
            "value": {
              "replicaName": "con",
              "clusterRole": "configsvr",
              "ipPrefix": "10.0.0.",
              "ipOffset": 8
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat('shardsvr', copyindex(),'-resources')]",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'shared-resources')]"
      ],
      "copy": {
        "name": "shardsvrLoop",
        "count": "[variables('clusterSettings').shardCount]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('replicaTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "commonSettings": { "value": "[variables('commonSettings')]" },
          "networkSettings": { "value": "[variables('networkSettings')]" },
          "storageSettings": { "value": "[variables('storageSettings')]" },
          "replicaSettings": {
            "value": {
              "replicaName": "[concat('sha', copyIndex())]",
              "clusterRole": "shardsvr",
              "ipPrefix": "10.0.0.",
              "ipOffset": "[mul(16, add(copyIndex(), 1))]"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "router-resources",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'shared-resources')]",
        "[concat('Microsoft.Resources/deployments/', 'configsvr-resources')]",
        "shardsvrLoop"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('routerTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "commonSettings": { "value": "[variables('commonSettings')]" },
          "networkSettings": { "value": "[variables('networkSettings')]" },
          "storageSettings": { "value": "[variables('storageSettings')]" },
          "routerSettings": {
            "value": {
              "routerName": "rou",
              "ip": "10.0.0.5",
              "shardCount": "[variables('clusterSettings').shardCount]"
            }
          }
        }
      }
    }
  ]
}
