{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "commonSettings": { "type": "object" },
    "networkSettings": { "type": "object" },
    "storageSettings": { "type": "object" },
    "replicaSettings": { "type": "object"}
  },
  "variables": {
    "___common": "",
    "location": "[parameters('commonSettings').location]",
    "namePrefix": "[concat(parameters('commonSettings').uniqueNamePrefix, '-', parameters('replicaSettings').replicaName)]",
    "___networkInterface": "",
    "nicName": "[concat(variables('namePrefix'), '-nic')]",
    "nicId": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]",
    "nicIpAddr": "[concat(parameters('replicaSettings').ipPrefix, parameters('replicaSettings').ipOffset)]",
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks', parameters('networkSettings').vnetName)]",
    "subnetId": "[concat(variables('vnetID'), '/subnets/', parameters('networkSettings').subnetName)]",
    "___vm": "",
    "vmName": "[concat(variables('namePrefix'), '-vm')]",
    "adminUsername": "[parameters('commonSettings').adminUsername]",
    "adminPassword": "[parameters('commonSettings').adminPassword]",
    "vmOsDiskUri": "[concat('https://', parameters('storageSettings').storageAccountName, '.blob.core.windows.net/', parameters('storageSettings').storageContainerName, '/','disk-os-', variables('vmName'),'.vhd')]",
    "commandToExecute": "[concat('bash configure-replica-vm.sh', ' -i ', variables('nicIpAddr'), ' -c ', parameters('replicaSettings').clusterRole, ' -r ', parameters('replicaSettings').replicaName)]",

    "osImageReference": {
      "publisher": "[variables('osFamilyUbuntu').imagePublisher]",
      "offer": "[variables('osFamilyUbuntu').imageOffer]",
      "sku": "[variables('osFamilyUbuntu').imageSKU]",
      "version": "latest"
    },

    "osFamilyUbuntu": {
      "osName": "ubuntu",
      "installerBaseUrl": "http://repo.mongodb.org/apt/ubuntu",
      "installerPackages": "mongodb-org",
      "imagePublisher": "Canonical",
      "imageOffer": "UbuntuServer",
      "imageSKU": "14.04.4-LTS"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('nicName')]",
      "apiVersion": "2015-05-01-preview",
      "location": "[variables('location')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[variables('nicIpAddr')]",
              "subnet": {
                "id": "[variables('subnetId')]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('vmName')]",
      "apiVersion": "2015-05-01-preview",
      "location": "[parameters('commonSettings').location]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('nicName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_D1"
        },
        "osProfile": {
          "computerName": "[variables('vmName')]",
          "adminUsername": "[variables('adminUsername')]",
          "adminPassword": "[variables('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": "[variables('osImageReference')]",
          "osDisk": {
            "name": "osdisk",
            "vhd": {
              "uri": "[variables('vmOsDiskUri')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[variables('nicId')]"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('vmName'), '/configurereplicavm')]",
      "apiVersion": "2015-05-01-preview",
      "location": "[variables('location')]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', variables('vmName'))]"
      ],
      "properties": {
        "publisher": "Microsoft.OSTCExtensions",
        "type": "CustomScriptForLinux",
        "typeHandlerVersion": "1.4",
        "settings": {
          "fileUris": "[parameters('commonSettings').mongoScriptUris]"
        },
        "protectedSettings": {
          "commandToExecute": "[variables('commandToExecute')]"
        }
      }
    }
  ]
}
